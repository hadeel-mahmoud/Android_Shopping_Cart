<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCDAD9"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".ViewItemDetails">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="292dp"
        android:layout_height="50dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:rotationX="-17"
        android:text="About This Item:)"
        android:textColor="#3F51B5"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="331dp"
        android:layout_height="185dp"
        android:layout_margin="16dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AAC8C5"
        android:orientation="horizontal"
        android:padding="5dp"
        android:paddingTop="100dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="230dp"
            android:layout_height="39dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:inputType="textPersonName"
            android:text="Item Name:"
            android:textColor="#656E9E"
            android:textColorHighlight="#407983" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:ems="10"
            android:inputType="textPersonName" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_gravity="left"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:inputType="phone"
            android:text="Size:"
            android:textColor="#656E9E"
            android:textColorHighlight="#407983" />

        <TextView
            android:layout_width="240dp"
            android:layout_height="37dp"
            android:ems="10"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AAC8C5"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="203dp"
            android:layout_height="31dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:inputType="phone"
            android:text="Price:"
            android:textColor="#656E9E"
            android:textColorHighlight="#407983" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="phone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="194dp"
            android:layout_height="33dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="sans-serif-black"
            android:text="Rating:"
            android:textColor="#656E9E"
            android:textColorHighlight="#407983" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:background="#AAC8C5"
            android:fontFamily="sans-serif-black"
            android:text="Item Remaning:"
            android:textColor="#5D6698"
            android:textColorHighlight="#407983" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#AAC8C5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="245dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:shadowColor="#FFFFFF"
            android:text="Category:"
            android:textColor="#5D6698"
            android:textColorHighlight="#407983" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AAC8C5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:text="Description :"
            android:textColor="#5D6698"
            android:textColorHighlight="#407983" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Add To Cart" />
    </LinearLayout>

</LinearLayout>